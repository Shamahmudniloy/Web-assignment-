@media (max-width: 768px) {
            #NavigationBar ul {
                display: none; /* Hide navigation by default on small screens */
            }
 
            #mobile-menu-btn {
                display: block;
                text-align: right;
                cursor: pointer;
                color: white;
                padding: 10px;
                background-color: darkcyan;
            }
 
            #NavigationBar input[type="checkbox"] {
                display: none; /* Hide the checkbox */
            }
 
            #NavigationBar ul {
                display: none; /* Hide the menu initially */
            }
 
            #NavigationBar input[type="checkbox"]:checked ~ ul {
                display: block; /* Show the menu when checkbox is checked */
            }
 
            #NavigationBar ul li {
                display: block; /* Convert list items to block for vertical alignment */
            }
 
            #NavigationBar ul li a {
                display: block; /* Convert links to block for proper touch area */
                padding: 10px; /* Add padding to links for touch-friendly interface */
                border-bottom: 1px solid #ddd; /* Add border between links for better visibility */
                text-align: center; /* Center align links */
